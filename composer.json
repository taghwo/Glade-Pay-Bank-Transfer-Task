{
    "name": "taghwo/glade-bank-transfer-test",
    "type": "library",
    "description": "This exposes API to make bank transfer with Glade Pay Gateway",
    "keywords": [
        "taghwo",
        "Glade Pay",
        "Fintech"
    ],
    "homepage": "https://github.com/taghwo/Glade-Pay-Bank-Transfer-Task.git",
    "license": "MIT",
    "authors": [
        {
            "name": "Taghwo Millionaire O",
            "email": "taghwomills@gmail.com",
            "role": "Owner"
        }
    ],
    "require": {
        "php": "~7.2",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "files":["src/Glade/Banktransfer/Helpers.php","src//Glade/Banktransfer/Config.php"],
        "psr-4": {
            "Taghwo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Taghwo\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
